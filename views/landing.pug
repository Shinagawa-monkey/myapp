doctype html
html(lang='en')
  include common/head.pug
  +head("Starter MVP")
  body
    nav.navbar.navbar-expand-lg.bg-light
      .container-fluid
        a.navbar-brand(href="/", aria-label="Golden Goose").navbar-brand.mr-0.mr-md-2
          img(src="/images/golden-goose.svg", width="36", height="36")
        .navbar-brand
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse(id="navbarNav")
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link(href="/") Home
            li.nav-item
              a.nav-link(href="/leads") Leads
    h1= title
    p Welcome to #{title}
    form(action="/", method="POST")
      input(name="lead_email", type="email", placeholder="Enter your email address")
      button(type="submit") Submit
    if leads
      h1 Leads
      for lead in leads
        p(id=lead.id)
          span #{lead.email}
            |
            a(href="/lead/" + lead.id) Details
            |
            button(onclick=`deleteLead('${lead.id}')`) Delete
    include common/footer.pug
    +footer()
    script(src='/javascripts/leads.js')
