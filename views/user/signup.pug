doctype html
html(lang='en')
  include ../common/head.pug
  +head("Login to Starter MVP")
  body.text-center
    header
      include ../common/navbar.pug
      +navbar()
    .container.col-xl-10.col-xxl-8.px-4.py-5
      .row.align-items-center.g-lg-5.py-5
        .col-md-10.mx-auto.col-lg-5
          form(action='/signup', method='POST').m-auto.p-4.p-md-5.border.rounded-3.bg-light.shadow
            fieldset
              legend.fw-bold Sign up
              .mb-3.text-start
                label.form-label(for="floatingInput") Email:
                input(id="floatingInput", placeholder='Please enter your email', required=true, name='email', type='email', value=formData.email).form-control
                if (errors && errors.email)
                  p.small.text-danger #{errors.email}
              .mb-3.text-start
                label(for="floatingPassword").form-label Password:
                input(id="floatingPassword", placeholder='New Password', required=true, name='password', type='password', value='').form-control
                if (errors && errors.password)
                  p.small.text-danger #{errors.password}
              button.w-100.btn.btn-lg.btn-primary(type='submit') Sign up
              hr.my-4
              p.fs-6.text-start.mt-5.text-muted
                | Already have an account? #[a(href="/login") Log in here].
    include ../common/footer.pug
    +footer()






