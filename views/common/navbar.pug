mixin navbar(user)
  nav.navbar.navbar-expand-lg.bg-light
    .container-fluid
      a(href="/", aria-label="Golden Goose").navbar-brand.me-0.me-md-2
        img(src="/images/golden-goose.svg", width="36", height="36")
      .navbar-brand
      button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse(id="navbarNav")
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item
            a.nav-link(href="/") Home
          li.nav-item
            a.nav-link(href="/leads") Leads
        .navbar-right.mt-2
          if user
            span.navbar-text Hello #{user.email}!
        .navbar-right
          ul.navbar-nav.me-auto.mt-2.mb-lg-0
            li.nav-item
              a.nav-link(href="/signup") Sign up
            li.nav-item
              a.nav-link(href="/login") Login
            li.nav-item
              a.nav-link(href="/logout") Logout
